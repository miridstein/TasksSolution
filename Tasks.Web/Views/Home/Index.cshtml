@using Tasks.Data
@model List<Assignment>

<div class="row">
    <div class="col-md-10">
        <input type="text" class="form-control" placeholder="Task Title" id="title" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary btn-block" id="submit">Add Task</button>
    </div>
</div>

<table class="table table-striped table-bordered" name="task-table">
    <tr>
        <th>Title</th>
        <th>Status</th>
    </tr>
@foreach(Assignment t in Model)
{
    <tr>
        <td>@t.Name</td>
        @*<td>${task.Status}</td>*@
        <td>
            @if (t.Status ==0)
            {
                <button class="btn btn-primary set-inprocess" data-id=@t.Id>Incomplete</button>
            }
            else
            {
                <button class="btn btn-primary set-complete" data-id=@t.Id>Being worked on by @t.UserName</button>
            }
        </td>
    </tr>
}
    
</table>

@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aspnet-signalr/1.1.4/signalr.min.js"></script>
    <script src="/js/Index.js"></script>
}
